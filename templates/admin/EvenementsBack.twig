{% block body %}
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                GÃ©rer les evenements:</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                    <th>
                                        Nom Evenement
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        inviter
                                    </th>
                                    <th>
                                        date
