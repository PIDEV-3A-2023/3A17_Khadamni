{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block content %}
    <h1>Avis</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdAvis</th>
                <td>{{ avi.idAvis }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ avi.note }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ avi.commentaire }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ avi.dateCreation ? avi.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_avis_edit', {'idAvis': avi.idAvis}) }}">Modifier</a>

    {{ include('avis/_delete_form.html.twig') }}

    <a href="{{ path('app_avis_index') }}">Retour</a>
{% endblock %}
