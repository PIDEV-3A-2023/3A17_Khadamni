{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block content %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID événement</th>
                <td>{{ evenement.idevenement }}</td>
            </tr>
            <tr>
                <th>Nom événement</th>
                <td>{{ evenement.nomevenement }}</td>
            </tr>
            <tr>
                <th>Description événement</th>
                <td>{{ evenement.descriptionevenement }}</td>
            </tr>
            <tr>
                <th>Invité</th>
                <td>{{ evenement.inviter }}</td>
            </tr>
            <tr>
                <th>Date événement</th>
                <td>{{ evenement.dateevenement ? evenement.dateevenement|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement_edit', {'idevenement': evenement.idevenement}) }}">Modifier</a>
    {{ include('evenement/_delete_form.html.twig') }}
    <a href="{{ path('app_evenement_index') }}">Retour</a>

    
{% endblock %}
