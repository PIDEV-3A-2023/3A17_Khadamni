{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block content %}
    <h1 class="mb-4 text-3xl font-extrabold  text-white md:text-5xl lg:text-6xl">
                Détails des
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">évènements</span>
            </h1>

    <div style="width:50%">
        <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nom événement</th>
                <td>{{ evenement.nomevenement }}</td>
            </tr>
            <tr>
                <th>Description événement</th>
                <td>{{ evenement.descriptionevenement }}</td>
            </tr>
            <tr>
                <th>Invité</th>
                <td>{{ evenement.inviter }}</td>
            </tr>
            <tr>
                <th>Date événement</th>
                <td>{{ evenement.dateevenement ? evenement.dateevenement|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <img src="{{ asset('uploads/evenements/' ~ evenement.imageFilename) }}" alt="{{ evenement.nomEvenement }}">

    {#
    {% if weather %}
        <h3>Weather</h3>
        <p>Temperature: {{ weather.temperature }}°C</p>
        <p>Description: {{ weather.description }}</p>
        <img src="{{ weather.icon }}" alt="Weather icon">
    {% endif %}
    #}

    <button class="btn btn-primary" onclick="window.location.href='{{ path('app_avis_front', {'idevenement': evenement.idevenement}) }}'">Voir les avis</button>
    <button class="btn btn-primary" onclick="window.location.href='{{ path('app_evenement_front') }}'">Retour</button>

{% endblock %}
