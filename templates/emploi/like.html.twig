{% extends 'base.html.twig' %}

{% block title %}Emploi
{% endblock %}

{% block content %}
	<h1>Emploi</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>IdEmploi</th>
				<td>{{ emploi.idEmploi }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ emploi.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ emploi.description }}</td>
			</tr>
			<tr>
				<th>DatePublication</th>
				<td>{{ emploi.datePublication ? emploi.datePublication|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Salaire</th>
				<td>{{ emploi.salaire }}</td>
			</tr>
			<tr>
				<th>NiveauExperience</th>
				<td>{{ emploi.niveauExperience }}</td>
			</tr>
			<tr>
				<th>TypeContrat</th>
				<td>{{ emploi.typeContrat }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
