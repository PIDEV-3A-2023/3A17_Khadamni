{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
	<div
		class="p-10">
		<!--Card 1-->
		<div class=" w-full lg:max-w-full lg:flex h-full bg-green-200 bg-opacity-80 transform hover:translate-y-3 hover:shadow-xl transition duration-300">
			<div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"></div>
			<div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
				<div class="mb-8">
					<p
						class="text-sm text-gray-600 flex items-center">
						{# <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
																																																																																																																																																																																																	<path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z"/>
																																																																																																																																																																																																</svg> #}
						Salaire:
						<span class="text-blue-600 dark:text-blue-500">
							{{ emploi.salaire }}
							DT</span>
					</p>
					<div class="text-gray-900 font-bold text-xl mb-2">{{emploi.titre}}
					</div>
					<p class="text-gray-700 text-base ">{{ emploi.description }}
						DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD</p>
				</div>
				<div class="flex items-center">
					<img class="w-10 h-10 rounded-full mr-4" src="https://picsum.photos/32/32/?random" alt=" avatar of writer">
					<div class="text-sm">
						<p class="text-gray-900 leading-none">John Smith</p>
						<p class="text-gray-600">{{ emploi.datePublication ? emploi.datePublication|date('Y-m-d') : '' }}</p>

					</div>

				</div>
				<div class="text-gray-600 mr-2 ml-2 mt-8">
					<p>Education:
						<span class="text-blue-600 dark:text-blue-500">{{ emploi.niveauExperience }}</span>
					</p>

					<p>Competence:
						<span class="text-blue-600 dark:text-blue-500">{{ emploi.typeContrat }}</span>
					</p>
					<p>Competence:
						<span class="text-blue-600 dark:text-blue-500">{{ emploi.idEmploi }}</span>
					</p>

					<a href="{{ path('app_candidature_new',{'IdEmploi':emploi.idEmploi}) }} ">
						<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right ">
							Ajouter votre Candidature
						</button>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
