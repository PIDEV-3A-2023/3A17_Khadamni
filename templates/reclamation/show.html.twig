{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Reclamation</h1>

    <div class="shadow overflow-hidden rounded border-b border-gray-200">
        <table class="min-w-full divide-y divide-gray-200">
            <tbody class="bg-white divide-y divide-gray-200">
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-bold">IdReclamation</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ reclamation.idReclamation }}</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-bold">DateReclamation</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-bold">Description</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ reclamation.description }}</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-bold">TypeReclamation</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ reclamation.typeReclamation }}</td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-bold">Avis</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ suiviReclamation.avis }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors duration-200">Submit</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_reclamation_index') }}" class="mt-4 inline-block underline text-blue-500 hover:text-blue-700">back to list</a>
{% endblock %}
