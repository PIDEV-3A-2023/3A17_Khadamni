{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		footer {
			margin-top: 0; !important;
		}
		.slider-range-display {
			background-color: #f5f5f5;
			border: 1px solid #ccc;
			border-radius: 3px;
			color: #333;
			font-size: 14px;
			font-weight: bold;
			padding: 5px;
			width: 130px;
		}
	</style>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
	<script defer src="{{ asset('search.js') }}"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
	<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>


	<script>
		$(function () {
$("#price-slider").slider({
range: true,
min: 1,
max: 5000,
values: [
1, 5000
],
slide: function (event, ui) {
$("#amount").val(ui.values[0] + " - " + ui.values[1] + "TND");
},
stop: function (event, ui) {}
});
$("#amount").val($("#price-slider").slider("values", 0) + " - " + $("#price-slider").slider("values", 1) + " TND");
});
$(function () {
$("#duree-slider").slider({
range: true,
min: 1,
max: 30,
values: [
1, 30
],
slide: function (event, ui) {
$("#duree").val(ui.values[0] + " - " + ui.values[1] + " semaines");
},
stop: function (event, ui) {}
});
$("#duree").val($("#duree-slider").slider("values", 0) + " - " + $("#duree-slider").slider("values", 1) + " semaines");
});
	</script>

{% endblock %}

{% block content %}


	<!-- Table section -->
	<div class="w-full md:w-3/4 px-4">
		<div
			class="p-4 rounded">
			<!-- Table content -->
			<div>
				<table class="text-sm text-left w-full">
					<caption class="p-5 text-lg font-bold text-left  text-white shadow-2xl">
						<div class="flex">
							<div>
								Mes Candidatures:
							</div>
						</div>
					</caption>


					<thead class="text-xs  whitespace-nowrap uppercase bg-gray-700 text-gray-300">

						<tr>
							<th scope="col" class="px-6 py-3">
								Nom du stage
							</th>
							<th scope="col" class="px-6 py-3">
								Nom Entreprise
							</th>
							<th scope="col" class="px-6 py-3">
								Adresse Stage
							</th>
							<th scope="col" class="px-6 py-3">
								Duree Stage
							</th>


						</tr>
					</thead>
					<tbody id="prev-tab">
						{% for candidatures in candidatures %}
							<tr class="ligne text-white  whitespace-nowrap ">
								<th scope="row" class="px-6 py-4">
									{{ candidatures.idStage.poste }}
								</th>
								<td class="px-6 py-4" style="min-width: 250px;">
									{{ candidatures.idStage.nomEntreprise  }}
								</td>
								<td class="px-6 py-4">
									{{ candidatures.idStage.adresseStage  }}

								</td>
								<td class="px-6 py-4">
									{{ candidatures.idStage.dureeStage }}
									semaines
								</td>

							</tr>
						{% endfor %}
					</tbody>
					<tbody id="new-tab"></tbody>
				</table>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
